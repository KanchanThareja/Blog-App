<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %> Post</div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input value="<%= blog.title %>" type="text" name="blog[title]">
        </div>
        <div class="field">
            <label>Image Url</label>
            <input value="<%= blog.image %>" type="text" name="blog[image]">
        </div>
        <div class="field">
            <label>Description</label>
            <textarea name="blog[body]"><%= blog.body %></textarea>
        </div>
        <button class="ui violet big basic button" type="submit">Submit</button>
    </form>
</div>

<% include ./partials/footer %>